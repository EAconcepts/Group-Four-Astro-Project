---
interface Props {
  component?: string;
  href?: string;
  type?: "submit";
}

const {component,href,type} = Astro.props;
const className ="uppercase px-[20px] py-[12px] rounded-[8px] font-['Inter'] font-[700] text-[16px] leading-[24px] text-white bg-[#FF601F] shadow-[0px_14px_16px_0px_#1D29390D]";
---

{
  ({
    a: <a href={href} class={className} >
        <slot />
      </a>
  })[component as string] || <button type={type} class={className}><slot /></button>
}
